{
  "name": "typescript-node-lib",
  "version": "0.0.0",
  "licence": "MIT",
  "author": {
    "name": "name",
    "email": "email@domain.com"
  },
  "main": "dist/index.js",
  "description": "your typescript library description",
  "keywords": [
    "typescript"
  ],
  "scripts": {
    "benchmarks": "ts-node benchmarks",
    "changelog": "standard-changelog",
    "clean": "rimraf dist",
    "docs": "npm run clean && typedoc --options typedoc.markdown.json",
    "lint": "eslint -c ./.eslintrc.json src/**/*.ts --fix",
    "prepublishOnly": "npm run clean && tsc -p tsconfig.npm.json",
    "size-limit": "npm run clean && tsc -p . && size-limit",
    "test": "jest",
    "upgrade-interactive": "npm-check --update"
  },
  "homepage": "https://github.com/yourname/yourrepo#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourname/yourrepo.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "dist/index.js"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "@size-limit/time": "^4.10.1",
    "@types/benchmark": "^2.1.0",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "benchmark": "^2.1.4",
    "codecov": "^3.8.1",
    "eslint": "^7.22.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-check": "^5.9.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "size-limit": "^4.10.1",
    "standard-changelog": "^2.0.27",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.32",
    "typedoc-plugin-markdown": "^3.6.0",
    "typescript": "^4.2.3"
  }
}
